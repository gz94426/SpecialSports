@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>

<head lang="en">
    <meta charset="UTF-8">
    <title>登录</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />

    <link href="~/AmazeUI-2.4.2/assets/css/amazeui.css" rel="stylesheet" />
    <link href="~/css/dlstyle.css" rel="stylesheet" />

    <script src="~/AmazeUI-2.4.2/assets/js/jquery.min.js"></script>
    <script src="~/js/layer/layer.js"></script>
    <script>
        $(function () {
            //获取验证码
            $("#hqyz").click(function () {
                if ($("#Phone").val() == "") {
                    layer.open({
                        title: "系统提示",
                        content: "手机号不能为空!",
                        yes: function () {
                            layer.closeAll();
                        }
                    })
                }
                else {

                    $.post("Login/sendMobileCode", { phone: $("#Phone").val() }, function () {

                    });
                    $.post("sendMobileCode", { phone: $("#Phone").val() }, function () {

                    });
                }


            });
            $("#wj_login").click(function () {

                if ($("#username").val() == "" || $("#Phone").val() == "" || $("#code").val() == "" || $("#pass").val() == "") {
                    layer.open({
                        title: "系统提示",
                        content: "文本框不能为空!",
                        yes: function () {
                            layer.closeAll();
                        }
                    })
                }
                else {
                   
                    var upcp = $("#username").val() + "," + $("#Phone").val() + "," + $("#code").val() + "," + $("#pass").val()
                  
                    $.post("Login/update_Login", { user: upcp }, function (e) {

                        if (e == 1) {
                                    
                            layer.open({
                                title: "系统提示",
                                content: "成功!",
                                yes: function () {
                                    
                                    layer.closeAll();
                                }
                            })
                        }
                        else if (e == -1) {
                            layer.open({
                                title: "系统提示",
                                content: "操作异常!",
                                yes: function () {
                                    layer.closeAll();
                                }
                            })
                        }
                        else {
                            layer.open({
                                title: "系统提示",
                                content: e,
                                yes: function () {
                                    layer.closeAll();
                                }
                            })
                        }
                    });
              
                }
            });

            //忘记密码
            $("#wjmm").click(function () {
                layer.open({
                    type: 1,
                    title: "忘记密码",
                    content: $("#divwj"),
                    yes: function () {  
                    }
                })
            });










            //登录单击事件
            $("#butLogin").click(function () {
                var username = $("#user").val();
                var password = $("#password").val();

                if (user == "" || password == "") {
                    layer.open({
                        title: "系统提示",
                        content: "用户名或姓名不能为空!",
                        yes: function () {
                            layer.closeAll();
                        }
                    })
                }
                else {



                    var name = username + "," + password;
                    
                    //登录跳转
                    $.post("/Login/ShopUser_Login", { user: name }, function (e) {
                         if (e == "1")
                        {
                            layer.open({
                                title: "系统提示",
                                content: "用户名或密码有误",
                                yes: function () {
                                    layer.closeAll();
                                }
                            })
                         }
                         else
                         {
                             location.href = "http://localhost:2484"
                         }
                        //判断是否跳回商品详情
                         if (e.type == 1)
                         {
                             location.href = "http://localhost:2484//Home/GoodsDetail?id=" + e.data;
                         }
                         else if (e.type == 2)
                         {
                            
                             location.href = "http://localhost:2484//Home/ShopCart";
                         }
                    
                       
                        
                    });


                }

            });

        });

    </script>
</head>

<body>

    <div class="login-boxtitle">
        <a href="#">
            <img src="~/images/SSlogo.png" /></a>
    </div>

    <div style="background: #A5d6f4">
        <div class="login-main">
            <div class="login-banner-bg">
                <span></span>

                <img src="~/images/islogin.jpg" />
            </div>
            <div class="login-box">

                <h3 class="title">登录商城</h3>

                <div class="clear"></div>

                <div class="login-form">
                    <form method="post" id="from1">
                        <div class="user-name">
                            <label for="user"><i class="am-icon-user"></i></label>
                            <input type="text" name="user" id="user" placeholder="邮箱/手机/用户名">
                        </div>
                        <div class="user-pass">
                            <label for="password"><i class="am-icon-lock"></i></label>
                            <input type="password" name="password" id="password" placeholder="请输入密码">
                        </div>

                    </form>
                </div>

                <div class="login-links">
                    <label for="remember-me">
                        <input id="remember-me" type="checkbox" check="false">记住密码</label>
                    <a href="#" class="am-fr" id="wjmm">忘记密码</a>
                    <a href="~/Register/Index" class="zcnext am-fr am-btn-default">注册</a>
                    <br />
                </div>
                <div class="am-cf">
                    <input type="button" id="butLogin" value="登 录" class="am-btn am-btn-primary am-btn-sm">
                </div>


                <div class="partner">
                    <h3>合作账号</h3>
                    <div class="am-btn-group">
                        <li><a href="#"><i class="am-icon-qq am-icon-sm"></i><span>QQ登录</span></a></li>
                        <li><a href="#"><i class="am-icon-weibo am-icon-sm"></i><span>微博登录</span> </a></li>
                        <li><a href="#"><i class="am-icon-weixin am-icon-sm"></i><span>微信登录</span> </a></li>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <div class="footer ">
        <div class="footer-hd ">
            <p>
                <a href="# ">恒望科技</a>
                <b>|</b>
                <a href="# ">商城首页</a>
                <b>|</b>
                <a href="# ">支付宝</a>
                <b>|</b>
                <a href="# ">物流</a>
            </p>
        </div>
        <div class="footer-bd ">
            <p>
                <a href="# ">关于恒望</a>
                <a href="# ">合作伙伴</a>
                <a href="# ">联系我们</a>
                <a href="# ">网站地图</a>
                <em>© 2015-2025 Hengwang.com 版权所有</em>
            </p>
        </div>
    </div>
</body>

</html>
