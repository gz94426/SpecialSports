<div class="clear"></div>
<div class="concent">
    <!--地址 -->
    <div class="paycont">
        <div class="address">
            <h3>确认收货地址 </h3>
            <div class="control">
                <div class="tc-btn createAddr theme-login am-btn am-btn-danger">使用新地址</div>
            </div>
            <div class="clear"></div>
            <ul>

                <div class="per-border"></div>
                @{
                    List<tbl_AddressInfo> tbladdrss = Session["Address"] as List<tbl_AddressInfo>;
                    foreach (tbl_AddressInfo item in tbladdrss)
                    {
                          <li id="user_addresslist_one" class="user-addresslist">

                    <div class="address-left">
                        <div class="user DefaultAddr">

                            <span class="buy-address-detail">
                                <span class="buy-user">@item.address_name</span>
                                <span class="buy-phone"></span>
                            </span>
                        </div>
                        <div class="default-address DefaultAddr">
                            <span class="buy-line-title buy-line-title-type">收货地址：</span>
                            <span class="buy--address-detail">
                                <span class="province">@item.address_shengfen</span>省
										<span class="city">@item.address_city</span>市
										<span class="dist">@item.address_qu</span>区
										<span class="street">@item.address_street</span>
                            </span>


                        </div>
                        <ins class="deftip">默认地址</ins>
                    </div>
                    <div class="address-right">
                        <a href="person/address.html">
                            <span class="am-icon-angle-right am-icon-lg"></span></a>
                    </div>
                    <div class="clear"></div>

                    <div class="new-addr-btn">
                        <a  class="hidden">设为默认</a>
                        <span class="new-addr-bar hidden">|</span>
                        <a  id="AddOrUpdate">编辑</a>
                        <span class="new-addr-bar">|</span>
                        <a href="javascript:void(0);" onclick="delClick(this);">删除</a>
                    </div>

                </li>
                <div class="per-border"></div>    
                    }
                    
                    }
                          
            </ul>

            <div class="clear"></div>
        </div>
        <!--物流 -->
        <div class="logistics">
            <h3>选择物流方式</h3>
            <ul class="op_express_delivery_hot">
                <li data-value="yuantong" class="OP_LOG_BTN  "><i class="c-gap-right" style="background-position: 0px -468px"></i>圆通<span></span></li>
                <li data-value="shentong" class="OP_LOG_BTN  "><i class="c-gap-right" style="background-position: 0px -1008px"></i>申通<span></span></li>
                <li data-value="yunda" class="OP_LOG_BTN  "><i class="c-gap-right" style="background-position: 0px -576px"></i>韵达<span></span></li>
                <li data-value="zhongtong" class="OP_LOG_BTN op_express_delivery_hot_last "><i class="c-gap-right" style="background-position: 0px -324px"></i>中通<span></span></li>
                <li data-value="shunfeng" class="OP_LOG_BTN  op_express_delivery_hot_bottom"><i class="c-gap-right" style="background-position: 0px -180px"></i>顺丰<span></span></li>
            </ul>
        </div>
        <div class="clear"></div>

        <!--支付方式-->
        <div class="logistics">
            <h3>选择支付方式</h3>
            <ul class="pay-list">
                <li class="pay card">
                    <img src="~/images/wangyin.jpg" />银联<span></span></li>
                <li class="pay qq">
                    <img src="~/images/weizhifu.jpg" />微信<span></span></li>
                <li class="pay taobao">
                    <img src="~/images/zhifubao.jpg" />支付宝<span></span></li>
            </ul>
        </div>
        <div class="clear"></div>

        <!--订单 -->
        <div class="concent">
            <div id="payTable">
                <h3>确认订单信息</h3>
                <div class="cart-table-th">
                    <div class="wp">
                        <div class="th th-item1">
                            <div class="td-inner">商品图片</div>
                        </div>
                        <div class="th th-item">
                            <div class="td-inner">商品信息</div>
                        </div>
                        <div class="th th-price">
                            <div class="td-inner">单价</div>
                        </div>
                        <div class="th th-amount">
                            <div class="td-inner">数量</div>
                        </div>
                        <div class="th th-sum">
                            <div class="td-inner">金额</div>
                        </div>
                        <div class="th th-sum">
                            <div class="td-inner">快递费</div>
                        </div>

                    </div>
                </div>
                <div class="clear"></div>
                @{
                    List<ShopManagement> slist = Session["slist"] as List<ShopManagement>;
                    decimal numm = 0;

                    foreach (ShopManagement sm in slist)
                    {
                    <tr class="item-list">
                        <div class="bundle  bundle-last">
                            <div class="bundle-main">
                                <ul class="item-content clearfix">
                                    <div class="pay-phone">
                                        <li class="td td-item1" style="width: 100px">
                                            <div class="item-pic">
                                                <a href="#" class="J_MakePoint">
                                                    <img src="~/img/@sm.cart_photo" class="itempic J_ItemImg"></a>
                                            </div>
                                        </li>
                                        <li class="td td-item" style="width: 380px">
                                            <div class="item-info">
                                                <div class="item-basic-info">
                                                    <a href="#" class="item-title J_MakePoint" data-point="tbcart.8.11">@sm.cart_remark</a><br />
                                                    <span class="sku-line">款式：@sm.cart_color</span>
                                                    <span class="sku-line">尺寸：@sm.cart_CodeNumber</span>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="td td-price" style="width: 150px">
                                            <div class="item-price price-promo-promo">
                                                <div class="price-content">
                                                    <em class="J_Price price-now">@sm.cart_price</em>
                                                </div>
                                            </div>
                                        </li>
                                    </div>
                                    <li class="td td-amount">
                                        <div class="amount-wrapper ">
                                            <div class="item-amount ">
                                                <span class="phone-title">购买数量</span>
                                                <div class="sl">
                                                    <input class="min am-btn" name="" type="button" value="-" disabled="disabled" />
                                                    <input class="text_box" name="" type="text" value="@sm.cart_quantity" style="width:30px;" disabled="disabled" />
                                                    <input class="add am-btn" name="" type="button" value="+"disabled="disabled" />
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="td td-sum">
                                        <div class="td-inner">
                                            @{
                        numm += Convert.ToDecimal(sm.cart_price * sm.cart_quantity);
                                                     
                                            }
                                            <em tabindex="0" class="J_ItemSum number">@(sm.cart_price * sm.cart_quantity)</em>
                                        </div>
                                    </li>
                                    <li class="td td-oplist">
                                        <div class="td-inner">
                                            <span class="phone-title">配送方式</span>
                                            <div class="pay-logis">
                                                <b class="sys_item_freprice">卖家包邮</b>
                                            </div>
                                        </div>
                                    </li>

                                </ul>
                                <div class="clear"></div>

                            </div>
                    </tr>
                    <div class="clear"></div>
                    }
                }

            </div>

        </div>
        <div class="clear"></div>
        <div class="pay-total">
            <!--留言-->
            <div class="order-extra">
                <div class="order-user-info">
                    <div id="holyshit257" class="memo">
                        <label>买家留言：</label>
                        <input type="text" title="选填,对本次交易的说明（建议填写已经和卖家达成一致的说明）" placeholder="选填,建议填写和卖家达成一致的说明" class="memo-input J_MakePoint c2c-text-default memo-close">
                        <div class="msg hidden J-msg">
                            <p class="error">最多输入500个字符</p>
                        </div>
                    </div>
                </div>

            </div>


            <!--含运费小计 -->
            <div class="buy-point-discharge ">
                <p class="price g_price ">
                    合计（含运费） <span>¥</span><em class="pay-sum">@numm</em>
                </p>
            </div>

            <!--信息 -->
            <div class="order-go clearfix">
                <div class="pay-confirm clearfix">
                    <div class="box">
                        <div tabindex="0" id="holyshit267" class="realPay">
                            <em class="t">实付款：</em>
                            <span class="price g_price ">
                                <span>¥</span> <em class="style-large-bold-red " id="J_ActualFee">@numm</em>
                            </span>
                        </div>

                        <div id="holyshit268" class="pay-address">

                            <p class="buy-footer-address">
                                <span class="buy-line-title buy-line-title-type">寄送至：</span>
                                <span class="buy--address-detail">
                                    <span class="province">XX</span>省
												<span class="city">XX</span>市
												<span class="dist">XX</span>区
												<span class="street">XX街道-住址</span>
                                </span>

                            </p>
                            <p class="buy-footer-address">
                                <span class="buy-line-title">收货人：</span>
                                <span class="buy-address-detail">
                                    <span class="buy-user">名字</span>
                                    <span class="buy-phone">电话号码</span>
                                </span>
                            </p>
                        </div>
                    </div>

                    <div id="holyshit269" class="submitOrder">
                        <div class="go-btn-wrap">
                            <a id="J_Go" href="success.html" class="btn-go" tabindex="0" title="点击此按钮，提交订单">提交订单</a>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>

        <div class="clear"></div>
